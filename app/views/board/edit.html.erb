 <div class = "container">
    
     
       <h1>글수정</h1>
       
    <div class="row">
      <form action="/update/<%= @edit_post.id %>" method="POST" class="col s12">
          
          <div class="row">
          <div class="input-field col s6">
            <input name = "editor" id="input_editor" type="text" data-length="10" value = "<%= @edit_post.editor %>">
            <label  for="input_text">글쓴이</label>
          </div>
        </div>
        
        <div class="row">
          <div class="input-field col s6">
            <input name = "title" id="input_title" type="text" data-length="30" value = "<%= @edit_post.title %>">
            <label  for="input_text">제목을 입력하세요</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <textarea name = "content" id="textarea" class="materialize-textarea"  data-length="120"><%= @edit_post.content %> </textarea>
            <label for="textarea1">내용을 입력하세요</label>
          </div>
        </div>
        
         <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
    

  
  </div>